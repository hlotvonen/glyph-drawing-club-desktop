{
	"files.associations": {
		".eslintrc": "jsonc",
		".prettierrc": "jsonc",
		".eslintignore": "ignore"
	},

	"javascript.validate.enable": false,
	"javascript.format.enable": true,
	"typescript.format.enable": true,

	"search.exclude": {
		".git": true,
		".eslintcache": true,
		".erb/dll": true,
		"release/{build,app/dist}": true,
		"node_modules": true,
		"npm-debug.log.*": true,
		"yarn.lock": true,
		"*.{css,sass,scss}.d.ts": true
	},
	"prettier.singleQuote": false
}
